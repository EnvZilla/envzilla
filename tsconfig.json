{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true
    },
    "include": [
        "src/**/*",
        "build.ts",
        "destroy.ts",
        "lib/**/*.ts",
        "test-webhook.js",
        "sample-app/index.js"
    ],
    "exclude": ["node_modules", "dist", "temp/**/*"]
}